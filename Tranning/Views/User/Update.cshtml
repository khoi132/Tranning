@model Tranning.Models.UserDetail

@{
    if (Model.role_id == 1)
    {
        ViewData["Title"] = "Update Tranning Staff";
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else if (Model.role_id == 4)
    {
        ViewData["Title"] = "Update Trainee";
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else
    {
        // Handle other roles or provide a default layout and title
        ViewData["Title"] = "Update User";

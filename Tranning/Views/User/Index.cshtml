            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>EXTRA CODE</th>
                        <th>USERNAME</th>
                        <th>ROLE</th>
                        <th>PHONE</th>
                        <th>EMAIL</th>
                        <th>AVATAR</th>
                        <th>GENDER</th>
                        <th>FULL NAME</th>
                        <th>STATUS</th>
                        <th>CREATED AT</th>
                        <th>UPDATED AT</th>
                        <th colspan="2" width="5%">ACTION</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.UserDetailLists.Where(u => u.role_id == 1))
                    {
                        <tr>
                            <td>@item.id</td>
                            <td>@item.extra_code</td>
                            <td>@item.username</td>
                            <td>@item.role_id </td>
                            <td>@item.phone</td>
                            <td>@item.email</td>
                            <td>
                                <img class="img-fluid" src="/Uploads/images/@item.avatar" />
                            </td>
                            <td>@item.gender</td>
                            <td>@item.full_name</td>
                            <td>@item.status</td>
                            <td>@item.created_at</td>
                            <td>@item.updated_at</td>
                            <td>
                                <a class="btn btn-info btn-sm" href="@Url.Action("Update","User", new { id = @item.id })">Edit</a>
                            </td>
                            <td>
                                <a class="btn btn-danger btn-sm" href="@Url.Action("Delete","User", new { id = @item.id })">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

@model Tranning.Models.UserDetail
@{

        ViewData["Title"] = "Add Tranning Staff";
        Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

    <div class="row vh-100">
        <div class="col-sm-12 col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5> Add New Trainee </h5>
                </div>
                <div class="card-body">
                    <form enctype="multipart/form-data" asp-action="Add">
                        <div class="row">
                            <div class="col-sm-12 col-md-6">
                                <div class="form-group">
                                    <label asp-for="username">Name</label>
                                    <input asp-for="username" class="form-control" />
                                    <span class="text-danger" asp-validation-for="username"></span>
                                </div>

                                @* <div class="form-group">
                            <label asp-for="role_id">Role</label>
                            <select asp-for="role_id" class="form-control" asp-items="@(new SelectList(ViewBag.Stores, "Value", "Text"))">
                            </select>
                            <span class="text-danger" asp-validation-for="role_id"></span>
                            </div> *@
                                <div class="form-group">
                                    <label asp-for="password">Password</label>
                                    <input asp-for="password" class="form-control" />
                                    <span class="text-danger" asp-validation-for="password"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="extra_code">Extra Code</label>
                                    <input asp-for="extra_code" class="form-control" />
                                    <span class="text-danger" asp-validation-for="extra_code"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="email">Email</label>
                                    <input asp-for="email" class="form-control" />
                                    <span class="text-danger" asp-validation-for="email"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="phone"> Phone </label>
                                    <input asp-for="phone" class="form-control" />
                                    <span class="text-danger" asp-validation-for="phone"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="full_name"> Full Name </label>
                                    <input asp-for="full_name" class="form-control" />
                                    <span class="text-danger" asp-validation-for="full_name"></span>
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-6">
                                <div class="form-group">
                                    <label asp-for="role_id" class="control-label"></label>
                                    <select class="form-control" asp-for="role_id">
                                        <option value="4">Trainer </option>
                                    </select>
                                    <span asp-validation-for="status" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="status" class="control-label"></label>
                                    <select class="form-control" asp-for="status">
                                        <option value="Active">Active</option>
                                        <option value="Deactive">Deactive</option>
                                    </select>
                                    <span asp-validation-for="status" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="gender" class="control-label"></label>
                                    <select class="form-control" asp-for="gender">
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                    </select>
                                    <span asp-validation-for="gender" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Photo" class="control-label"></label>
                                    <input type="file" class="form-control" asp-for="Photo" />
                                    <span class="text-danger" asp-validation-for="Photo"></span>
                                </div>
                            </div>
                            <div class="sm-12 col-md-6">
                                <button class="btn btn-primary my-3" type="submit"> Save </button>
                                <a class="btn btn-info ms-3 mb-0" href="@Url.Action("Index","User")">Back to lists</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

